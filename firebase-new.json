{
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log",
                "*.local"
            ],
            "predeploy": [
                "npm --prefix \"$RESOURCE_DIR\" run build"
            ]
        }
    ],
    "firestore": {
        "rules": "firestore.rules"
    },
    "hosting": {
        "public": "admin-panel/dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/api/stat",
                "run": {
                    "serviceId": "getPlatformStats",
                    "region": "us-central1"
                }
            },
            {
                "source": "/api/role",
                "run": {
                    "serviceId": "updateUserRole",
                    "region": "us-central1"
                }
            },
            {
                "source": "/api/mod",
                "run": {
                    "serviceId": "moderateVideo",
                    "region": "us-central1"
                }
            },
            {
                "source": "/api/verify",
                "run": {
                    "serviceId": "verifyParentPicture",
                    "region": "us-central1"
                }
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}