source 'https://cdn.cocoapods.org/'

# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, '14.0'

$FirebaseSDKVersion = '10.28.0'
install! 'cocoapods', :warn_for_unused_master_specs_repo => false
prepare_react_native_project!

# Enable modular headers for better module resolution in Xcode 16
use_modular_headers!

# Use static frameworks for Swift pods compatibility
use_frameworks! :linkage => :static

# If you are using a `react-native-flipper` your iOS build will fail when `NO_FLIPPER=1` is set.

project 'StriverApp.xcodeproj'

# Resolve version mismatch between Firebase and Google Sign-in
# Pinning version here

target 'StriverApp' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # Enables Flipper.
    # Note: Flipper is disabled because use_frameworks! is enabled
    :flipper_configuration => FlipperConfiguration.disabled,
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # Handled by use_native_modules! via react-native-fbsdk-next
  # Removing manual additions to prevent duplicate symbols and search path issues

  target 'StriverAppTests' do
    inherit! :complete
    # Pods for testing
  end

  post_install do |installer|
    # https://github.com/facebook/react-native/blob/main/packages/react-native/scripts/react_native_pods.rb#L197-L202
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false
    )

    installer.pods_project.targets.each do |target|
      # Fix Xcode 15 "Create Symlinks to Header Folders" warning/failure
      target.build_phases.each do |phase|
        if phase.respond_to?(:name) && phase.name == 'Create Symlinks to Header Folders'
          if phase.respond_to?(:always_execute)
            phase.always_execute = '1'
          end
        end
      end

      target.build_configurations.each do |config|
        # Force Firebase 11 and RN 0.73 flags + Xcode 16 C++ compatibility
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)']
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'FIR_VERSION_MAJOR=10'
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'FIR_VERSION_MINOR=28'
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << '_LIBCPP_ENABLE_CXX20_REMOVED_FEATURES'

        # Bump deployment target to 14.0 for compatibility
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
        
        # Apple Silicon Simulator Fix: Only build active architecture for Debug
        config.build_settings['ONLY_ACTIVE_ARCH'] = 'YES'

        # Force Swift version
        config.build_settings['SWIFT_VERSION'] = '5.0'

        # Xcode 16 fix for non-modular includes in framework modules
        config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
        
        # Static frameworks fix
        config.build_settings['DEFINES_MODULE'] = 'YES'

        # Ensure Swift libraries are found in static framework mode
        config.build_settings['LIBRARY_SEARCH_PATHS'] ||= ['$(inherited)']
        config.build_settings['LIBRARY_SEARCH_PATHS'] << '"$(SDKROOT)/usr/lib/swift"'

        # Fix Search Paths for Modular Headers + Static Frameworks
        config.build_settings['HEADER_SEARCH_PATHS'] ||= ['$(inherited)']
        config.build_settings['HEADER_SEARCH_PATHS'] << '"$(PODS_ROOT)/Headers/Public"'
        config.build_settings['HEADER_SEARCH_PATHS'] << '"$(PODS_ROOT)/Headers/Public/Firebase"'
        config.build_settings['HEADER_SEARCH_PATHS'] << '"$(PODS_ROOT)/Headers/Public/RNFBApp"'
        
        # Add search paths for Firebase and other static framework dependencies
        config.build_settings['FRAMEWORK_SEARCH_PATHS'] ||= ['$(inherited)']
        config.build_settings['FRAMEWORK_SEARCH_PATHS'] << '"$(PODS_CONFIGURATION_BUILD_DIR)/FirebaseCore"'
        config.build_settings['FRAMEWORK_SEARCH_PATHS'] << '"$(PODS_CONFIGURATION_BUILD_DIR)/FirebaseAuth"'
        config.build_settings['FRAMEWORK_SEARCH_PATHS'] << '"$(PODS_CONFIGURATION_BUILD_DIR)/RNFBApp"'

        # Silence flooding warnings to prevent log-induced build failures
        config.build_settings['CLANG_WARN_DOCUMENTATION_COMMENTS'] = 'NO'
        config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = 'YES'

        # Xcode 16 stability bundle
        config.build_settings['ENABLE_USER_SCRIPT_SANDBOXING'] = 'NO'
        config.build_settings['GENERATE_PROFILING_CODE'] = 'NO'
        config.build_settings['GCC_PASCAL_STRINGS'] = 'NO'
        config.build_settings['CLANG_COVERAGE_MAPPING'] = 'NO'
        config.build_settings['ENABLE_TESTABILITY'] = 'NO'
        config.build_settings['CLANG_ENABLE_MODULE_DEBUGGING'] = 'NO'
        
        # Speed & Stability 
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.4'
        config.build_settings['ONLY_ACTIVE_ARCH'] = 'YES'
        
        # Add the specific flag to re-enable std::unary_function in Xcode 16
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)']
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << '_LIBCPP_ENABLE_CXX17_REMOVED_UNARY_FUNCTION'
        
        ['OTHER_CFLAGS', 'OTHER_CPLUSPLUSFLAGS', 'OTHER_LDFLAGS'].each do |flag_key|
          if config.build_settings[flag_key]
            if config.build_settings[flag_key].is_a?(String)
              # Absolute clobber of -G with a regex that handles all variations
              config.build_settings[flag_key] = config.build_settings[flag_key].gsub(/(^|\s)-G(\s|$)/, ' ').strip
            elsif config.build_settings[flag_key].is_a?(Array)
              config.build_settings[flag_key].reject! { |flag| flag == '-G' || flag == '-G ' || flag == ' -G' }
            end
          end
        end
      end


      # Target problematic pods with merged community recommendations + our fixes
      if ['BoringSSL-GRPC', 'RCT-Folly', 'gRPC-Core'].include?(target.name)
        target.build_configurations.each do |config|
          config.build_settings['OTHER_CFLAGS'] = [
            '$(inherited)', 
            '-Wno-shorten-64-to-32',
            '-Wno-undefined-internal',
            '-Wno-deprecated',
            '-Wno-implicit-int-conversion'
          ]
          config.build_settings['OTHER_CPLUSPLUSFLAGS'] = [
            '$(inherited)', 
            '-Wno-shorten-64-to-32', 
            '-std=c++17', 
            '-D_LIBCPP_ENABLE_CXX17_REMOVED_UNARY_FUNCTION=1',
            '-DFOLLY_NO_CONFIG=1',
            '-DFOLLY_MOBILE=1',
            '-DFOLLY_USE_LIBCPP=1'
          ]
          config.build_settings['OTHER_LDFLAGS'] = ['$(inherited)']
          config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'c++17'
          config.build_settings['CLANG_CXX_LIBRARY'] = 'libc++'
          
          # Forcefully remove -G from these specific targets
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)']
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << '_LIBCPP_ENABLE_CXX17_REMOVED_UNARY_FUNCTION=1'
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'].delete('-G') if config.build_settings['GCC_PREPROCESSOR_DEFINITIONS']
        end
      end

      # --- THE NUCLEAR PATCHES ---
      # 1. Fix Boost unary_function for Xcode 16
      hash_header = File.join(installer.sandbox.root, "boost/boost/container_hash/hash.hpp")
      if File.exist?(hash_header)
        puts "Patching Boost: removing std::unary_function..."
        content = File.read(hash_header)
        new_content = content.gsub(/struct hash_base\s*:\s*std::unary_function<T,\s*std::size_t>\s*{};/, "struct hash_base {};")
        File.open(hash_header, "w") { |f| f.puts new_content }
      end

      # 2. Fix Folly json.cpp for Xcode 16
      json_cpp = File.join(installer.sandbox.root, "RCT-Folly/folly/json.cpp")
      if File.exist?(json_cpp)
        puts "Patching Folly: adding missing includes..."
        content = File.read(json_cpp)
        unless content.include?("#include <limits>")
          new_content = "#include <limits>\n" + content
          File.open(json_cpp, "w") { |f| f.puts new_content }
        end
      end
    end

    # --- THE NUCLEAR SCRUB ---
    # This manually cleans the .xcconfig files on disk right after they are generated.
    # This is the only way to ensure the -G flag is gone in Xcode 16.
    puts "--- RUNNING NUCLEAR -G SCRUB ON XCCONFIG FILES ---"
    Dir.glob(File.join(installer.sandbox.root, "**/*.xcconfig")).each do |file_path|
      content = File.read(file_path)
      if content.include?("-G")
        puts "Cleaning ghost flag from: #{File.basename(file_path)}"
        # Aggressive strip including leading/trailing spaces
        new_content = content.gsub(/ -G /, ' ').gsub(/ -G$/, ' ').gsub(/^-G /, ' ').gsub(/^-G$/, ' ')
        File.open(file_path, "w") { |f| f.puts new_content }
      end
    end
  end
end
